<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPFLib components demonstration" Height="600" Width="800" WindowHelper.SaveState="All">
    <DockPanel LastChildFill="True">
        <Menu  Background="WhiteSmoke" x:Name="MainMenu" DockPanel.Dock="Top">
            <MenuItem Header="Components">
                <MenuItem Header="AsyncTreeView" Tag="AsyncTreeViewDemoControl"/>
            </MenuItem>
            <MenuItem Header="Technologies">
                <MenuItem Header="DataWrapper" Tag="DataWrapperDemoControl"/>
                <MenuItem Header="ValidationWrapper" Tag="ValidationWrapperDemoControl"/>
            </MenuItem>
            <MenuItem Header="DataGrid">
                <MenuItem Header="Cell by cell commit" Tag="CellByCellCommit"/>
            </MenuItem>
        </Menu>
        <ContentControl DockPanel.Dock="Top" x:Name="MainContent"/>
    </DockPanel>
</Window>
